<Page x:Class="Alteris.LoginForm"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Alteris"
      mc:Ignorable="d" 
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      d:DesignHeight="704.04" d:DesignWidth="1280">

    <Grid  Background="#202020">
        <Frame x:Name="MainFrame"/>
        <StackPanel x:Name="CurrentGrid" HorizontalAlignment="Center">
            <ui:TextBox x:Name="LoginInput" Icon="Person24" PlaceholderText="Login" Width="250" Margin="0 250 0 0" Cursor="IBeam"/>
            <ui:PasswordBox x:Name="PasswordInput" Icon="Key24" PlaceholderText="Password" Width="250" Margin="0 25 0 0"/>
            <ui:Button Icon="ArrowRight24" Content="Login" HorizontalAlignment="Center" Margin="0 25 0 0" Click="LoginClick"/>
            <ui:Snackbar x:Name="SnackBar" Width="500"/>
        </StackPanel>
    </Grid>
</Page>
